<div class="container py-5">
  <div class="row">
    <div class="col-7 me-2">
      <div class="mt-3">
        <h1><strong><%= @offer.video_game.title %></strong></h1>
        <%= image_tag @offer.video_game.image_url, class: "card-show rounded" %>
      </div>
      <div class="mt-3">
        <h2>Game overview</h2>
        <%# Replace the lorem below with a paragraph about games. %>
        <p><%= @offer.video_game.overview %></p>
        <p><strong>Published: </strong><%= @offer.video_game.publishing_year %></p>
        <p><strong>Category: </strong><%= @offer.video_game.category %></p>
      </div>
      <div class="mt-5">
        <h3>Price per day</h3>
        <p><%= @offer.price %> yen (tax incl.)</p>
      </div>
    </div>
    <div class="col-4 py-5 ms-5">
      <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @marker.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      <h2>Rent this game</h2>
      <%= simple_form_for [@offer, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit "Create booking", class: "btn btn-dark rounded" %>
      <% end %>
    </div>
  </div>
  <div class='container pb-5 d-flex justify-content-center'>
    <%= link_to "Back to games", offers_path, class: "btn btn-flat" %>
  </div>
